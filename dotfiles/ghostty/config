command = /opt/homebrew/bin/fish
shell-integration = fish
shell-integration-features = no-cursor
cursor-style = block

font-family = Mononoki Nerd Font
font-size = 16
macos-titlebar-style = tabs
bold-is-bright = true

theme = GruvboxDarkHard
mouse-hide-while-typing = true
quick-terminal-position = center


# Tmux-like keybindings

keybind = ctrl+h=new_split:left
keybind = ctrl+j=new_split:down
keybind = ctrl+k=new_split:up
keybind = ctrl+l=new_split:right

keybind = ctrl+a>left=goto_split:left
keybind = ctrl+a>down=goto_split:down
keybind = ctrl+a>up=goto_split:up
keybind = ctrl+a>right=goto_split:right

keybind = ctrl+a>h=goto_split:left
keybind = ctrl+a>j=goto_split:down
keybind = ctrl+a>k=goto_split:up
keybind = ctrl+a>l=goto_split:right

keybind = ctrl+a>c=new_tab
keybind = ctrl+a>n=new_window
keybind = ctrl+a>v=new_split:down
keybind = ctrl+a>shift+v=new_split:right

keybind = ctrl+a>z=toggle_split_zoom
keybind = ctrl+a>e=equalize_splits
keybind = global:ctrl+grave_accent=toggle_quick_terminal

